<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>TIW-QuoteManagement-pureHTML</display-name>
	<context-param>
		<param-name>dbUrl</param-name>
		<param-value>jdbc:mysql://localhost:3306/quotemanagement?serverTimezone=UTC</param-value>
	</context-param>
	<context-param>
		<param-name>dbUser</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>dbPassword</param-name>
		<param-value>password</param-value>
	</context-param>
	<context-param>
		<param-name>dbDriver</param-name>
		<param-value>com.mysql.cj.jdbc.Driver</param-value>
	</context-param>
	<filter>
		<filter-name>SessionChecker</filter-name>
		<filter-class>it.polimi.tiw.filters.SessionChecker</filter-class>
	</filter>
	<filter>
		<filter-name>ClientChecker</filter-name>
		<filter-class>it.polimi.tiw.filters.ClientChecker</filter-class>
	</filter>
	<filter>
		<filter-name>WorkerChecker</filter-name>
		<filter-class>it.polimi.tiw.filters.WorkerChecker</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SessionChecker</filter-name>
		<url-pattern>/GotoClientHome</url-pattern>
		<url-pattern>/GotoWorkerHome</url-pattern>
		<url-pattern>/Logout</url-pattern>
		<url-pattern>/CreateQuote</url-pattern>
		<url-pattern>/GotoQuoteDetails</url-pattern>
		<url-pattern>/UpdatePrice</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ClientChecker</filter-name>
		<url-pattern>/GotoClientHome</url-pattern>
		<url-pattern>/CreateQuote</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>WorkerChecker</filter-name>
		<url-pattern>/GotoWorkerHome</url-pattern>
		<url-pattern>/UpdatePrice</url-pattern>
	</filter-mapping>
	<welcome-file-list>
		<welcome-file>GotoLogin</welcome-file>
	</welcome-file-list>
</web-app>